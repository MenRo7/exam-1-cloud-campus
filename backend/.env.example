# Configuration du serveur
PORT=5000
NODE_ENV=development

# Base de données MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/exam1Db

# JWT Secret - IMPORTANT: Générer un nouveau secret avec:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=votre_secret_jwt_tres_long_et_securise_a_changer
JWT_EXPIRATION=24h

# Services externes
GATEWAY_URL=http://localhost:8000

# CORS - Origins autorisées (séparées par des virgules)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
